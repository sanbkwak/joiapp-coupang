REACT_APP_HORIZON_URL=https://horizon-testnet.stellar.org
REACT_APP_NETWORK_PASSPHRASE=Test SDF Network ; September 2015
REACT_APP_ISSUER_PUBLIC_KEY=
REACT_APP_DISTRIBUTION_PUBLIC_KEY=

REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_APP_ID=
# .env.example
# JoiApp Environment Configuration Template
# Copy this file to .env.local and fill in the actual values

#############################################
# ENVIRONMENT SETTINGS
#############################################
NEXT_PUBLIC_ENVIRONMENT=development
NODE_ENV=development

#############################################
# API CONFIGURATION
#############################################
# Public API base URL (accessible from client-side)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Internal API URL (server-side only)
API_BASE_URL=http://localhost:3000/api

# API version
API_VERSION=v1

#############################################
# FIREBASE CONFIGURATION
#############################################
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin SDK (server-side only)
FIREBASE_ADMIN_SDK_KEY=path_to_service_account.json
FIREBASE_DATABASE_URL=https://your_project.firebaseio.com

#############################################
# FEATURE FLAGS
#############################################
# Stellar blockchain features (disable in production)
NEXT_PUBLIC_FEATURE_STELLAR=false

# Email verification requirement
NEXT_PUBLIC_FEATURE_EMAIL_VERIFICATION=true

# Admin panel access
NEXT_PUBLIC_FEATURE_ADMIN_PANEL=true

# Development features
NEXT_PUBLIC_FEATURE_DEBUG_MODE=false

# Survey features
NEXT_PUBLIC_FEATURE_SURVEY_ENABLED=true

# Coin features (TestNet only)
NEXT_PUBLIC_FEATURE_COINS_TESTNET=false

#############################################
# AUTHENTICATION & SECURITY
#############################################
# JWT settings
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Session settings
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400

# Password policy
PASSWORD_MIN_LENGTH=10
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

#############################################
# EMAIL CONFIGURATION
#############################################
# Email service provider
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key

# Email verification
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_TIMEOUT=86400

# Disposable email blocking
BLOCK_DISPOSABLE_EMAILS=true

#############################################
# DATABASE CONFIGURATION
#############################################
# Primary database
DATABASE_URL=postgresql://username:password@localhost:5432/joiapp

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

#############################################
# MONITORING & LOGGING
#############################################
# Application monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error tracking
ERROR_REPORTING_ENABLED=true

#############################################
# CORS CONFIGURATION
#############################################
# Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# CORS credentials
CORS_ALLOW_CREDENTIALS=true

# CORS max age
CORS_MAX_AGE=86400

#############################################
# FILE STORAGE
#############################################
# File upload settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cloud storage
STORAGE_PROVIDER=firebase
STORAGE_BUCKET=your_storage_bucket

#############################################
# THIRD-PARTY SERVICES
#############################################
# Vercel deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Security scanning
SNYK_TOKEN=your_snyk_token

# Notification services
SLACK_WEBHOOK_URL=your_slack_webhook
DISCORD_WEBHOOK_URL=your_discord_webhook

#############################################
# DEVELOPMENT SETTINGS
#############################################
# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Hot reload
HOT_RELOAD=true

# Source maps
GENERATE_SOURCEMAP=true

#############################################
# PRODUCTION OVERRIDES
#############################################
# These settings should be overridden in production
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_FEATURE_STELLAR=false
# NEXT_PUBLIC_FEATURE_DEBUG_MODE=false
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# GENERATE_SOURCEMAP=false

#############################################
# LEGAL & COMPLIANCE
#############################################
# Legal page URLs (must return 200 OK)
LEGAL_PRIVACY_URL=/legal/privacy
LEGAL_TERMS_URL=/legal/terms
DOCS_API_URL=/docs/api

# Data retention settings
DATA_RETENTION_DAYS=2555
CONSENT_RETENTION_DAYS=2555
LOG_RETENTION_DAYS=90

#############################################
# BACKUP & RECOVERY
#############################################
# Backup settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Recovery settings
RECOVERY_MODE=false